@model CourseUpdateModel
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6">
    <!-- general form elements -->
    <div class="card card-primary">
        <partial name="_ResponsePartial" />
        <div class="card-header">
            <h3 class="card-title">Updating a new course</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="Update" asp-controller="Course" asp-area="Admin"
              asp-antiforgery="true">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input type="text" class="form-control" asp-for="Description">
                </div>
                <div class="form-group">
                    <label asp-for="Fees">Fees</label>
                    <input type="number" class="form-control" asp-for="Fees" min="0">
                </div>

                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
        </form>
    </div>
    <!-- /.card -->
</div>



